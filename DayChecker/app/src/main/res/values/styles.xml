<resources>
    <style name="ThMainActionBar" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">#9570fa</item>
        <item name="colorPrimaryDark">@color/statusBar</item>
        <item name="colorAccent">@color/highlight</item>
        <item name="android:fontFamily">@font/medium</item>
    </style>

    <style name="ThNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#9570fa</item>
        <item name="colorPrimaryDark">@color/statusBar</item>
        <item name="colorAccent">@color/highlight</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/activity_splash</item>
    </style>

    <style name="CustomRatingBarStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">47dip</item>
    </style>

    <style name="CustomRatingBarSmallStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_small</item>
        <item name="android:minHeight">15dip</item>
        <item name="android:maxHeight">47dip</item>
    </style>

</resources>